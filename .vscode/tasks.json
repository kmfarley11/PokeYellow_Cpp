    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean; sh cleanup_all.sh",
            "problemMatcher": []
        },
        {
            "label": "config release",
            "type": "shell",
            "command": "cmake ."
        },
        {
            "label": "config debug",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug .",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "problemMatcher": []
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "cd bin/; ./tester"
        },
        {
            "label": "run target",
            "type": "shell",
            "command": "cd bin/; ./PokeYellow_Cpp"
        }
    ]
}